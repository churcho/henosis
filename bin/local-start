#!/usr/bin/env bash

osascript <<EOF
  tell application "iTerm2"
    tell current session of first window
      set postgresSession to (split horizontally with same profile)
      tell postgresSession
        write text "bin/local-start-postgres"
      end tell

      set webpackSession to (split horizontally with same profile)
      tell webpackSession
        write text "bin/local-start-webpack"
      end tell

      set phoenixSession to (split horizontally with same profile)
      tell phoenixSession
        write text "bin/local-start-phoenix"
      end tell

      set backendTestSession to (split horizontally with same profile)
      tell backendTestSession
        write text "bin/local-start-backend-tests"
      end tell

      set eslintSession to (split horizontally with same profile)
      tell eslintSession
        write text "bin/local-start-eslint"
      end tell

      set storybookSession to (split horizontally with same profile)
      tell storybookSession
        write text "bin/local-start-storybook"
      end tell
    end tell
  end tell
EOF
